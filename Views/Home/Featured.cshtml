@model IEnumerable<DoAnCN.Models.Doan>


<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        @Html.Action("FeaturedMenu","Home")
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix @item.maloai fresh-meat">
                    <div class="featured__item">
                        <p hidden class="hiddenid">@item.anhdoanurl</p>
                        <div class="featured__item__pic set-bg" data-setbg="" style="height: 250px;background-position: center;background-repeat: no-repeat;background-size: contain;">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="@Url.Action("Index","Home")" onclick="share()"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="#">@item.tendoan</a></h6>
                            <h5>@item.giaban</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

